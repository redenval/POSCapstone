@model Capstone.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Login";
}
<style>
    .login-form {
    }

    .error-text {
        color: #ff0000;
    }

    .validation-summary-errors li {
        color: #ff0000;
    }
</style>
<div class="container">
    <div class="login-form container-fluid shadow p-5 mx-auto my-5 justify-content-center">
        @using (Html.BeginForm("LoginUser", "Home", FormMethod.Post))
        {
            <div class="register-form p-5 mx-auto">
                <h1 class="">Login</h1>
                <h4 class="">Doesn't Have An Account? <a href="/Home/Register">Register Here</a></h4>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="row">
                        @Html.ValidationSummary(false,"",new { @class = "error-text"})
                    </div>
                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.Email)
                        </div>
                        <div class="row col-md-9">
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                        </div>
                    </div>

                    <div class="row form-group">
                        <div class="col-md-3">
                            @Html.LabelFor(m => m.Password)
                        </div>
                        <div class="row col-md-9">
                            @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "password" })
                        </div>
                    </div>

                </div>
            </div>
            <div class="row">
                <button type="submit" class="btn btn-primary px-5">Login</button>
            </div>
        }
    </div>

</div>
