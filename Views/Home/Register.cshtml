@model Capstone.Models.UserViewModel

<style>
    .register-form {
        width: 600px;
    }
</style>
<div class="container">
    <div class="register-form container-fluid shadow p-5 mx-auto my-5 justify-content-center">
        @using (Html.BeginForm("RegisterUser", "Home", FormMethod.Get))
        {

            <div class="register-form p-5 mx-auto">
                <h1>Create Your Account</h1>
                <h4>Already Have An Account? <a href="/Home/Index">Login Here</a></h4>
            </div>
            <div class="row">
                <div class="col-6">
                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "Email", required = "required", placeholder = "Enter your email address" })
                        @Html.LabelFor(m => m.Email)
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Password, new { @class = "form-control", type = "Password", required = "required", placeholder = "Minimum of 6 characters", minlength = "6" })
                        @Html.LabelFor(m => m.Password)
                    </div>

                    <div class="form-group">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", type = "tel", required = "required", placeholder = "Enter your phone number" })
                        @Html.LabelFor(m => m.Phone)
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <input asp-for="@Model.StreetAddress" type="text" class="form-control" id="Street" required="required" placeholder="Enter your street address"/>
                        <label for="Street">Street Address</label>
                    </div>

                    <div class="form-group">
                        <select asp-for="@Model.Barangay" asp-items="ViewBag.BarangayList" class="form-control"></select>
                        <label for="Street">Barangay</label>
                    </div>
                </div>
            </div>

            <div>
                <button type="submit" class="btn btn-primary px-5">Register</button>
            </div>
        }
    </div>

</div>
