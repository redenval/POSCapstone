@section Scripts {
    <script>
        $(function () {
            $('.approve-order').on('click', function () {
                let orderId = $(this).parent().find('.order-id').val();
                $.ajax({
                    type: 'POST',
                    url: "/Admin/ApproveOrder",
                    data: { "orderId": orderId, },
                    dataType: "json",
                    success: function (response) {
                        if (response.success) {
                            window.location = "/Admin/ManageOrder"
                        }
                    }
                });
            });
            
            $('.confirm-delivery').on('click', function () {
                let orderId = $(this).parent().find('.order-id').val();
                $.ajax({
                    type: 'POST',
                    url: "/Admin/ConfirmDelivery",
                    data: { "orderId": orderId, },
                    dataType: "json",
                    success: function (response) {
                        if (response.success) {
                            window.location = "/Admin/ManageOrder"
                        }
                    }
                });
            });
        });
    </script>
